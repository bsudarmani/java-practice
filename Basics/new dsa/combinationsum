#include<stdio.h>
#include<conio.h>
int combination[100];
int count=0;
void findCombination(int arr[],int n,int target,int index)
{
 int i;
  if(target==0)
  {
    printf("[");
    for(i=0;i<count;i++)
    {
	printf(" %d ",combination[i]);
    }
    printf("]");
    return;
  }
  if(index>=n || target<0) return;
  if(arr[index]<=target)
  {
    combination[count++]=arr[index];
    findCombination(arr,n,target-arr[index],index);
    count--;
  }
  findCombination(arr,n,target,index+1);
}
void main()
{
    int arr[]={1, 3, 6, 7};
    int target=7;
    int n=sizeof(arr)/sizeof(arr[0]);
    clrscr();
    findCombination(arr,n,target,0);
    getch();
}