#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>

#define MAX 100

float stack[MAX];
int top = -1;

void push(float val) {
    if (top == MAX - 1) {
        printf("Stack Overflow\n");
        return;
    }
    stack[++top] = val;
}

float pop() {
    if (top == -1) {
        printf("Stack Underflow\n");
        exit(1);
    }
    return stack[top--];
}

int main() {
    char postfix[MAX], ch;
    float values[26]; // to store values of a-z
    float a, b, result;

    printf("Enter the postfix expression: ");
    scanf("%s", postfix);

    // initialize values array
    for (int i = 0; i < 26; i++) {
        values[i] = -1;
    }

    for (int i = 0; i < strlen(postfix); i++) {
        ch = postfix[i];

        if (isalpha(ch)) {
            int index = ch - 'a';
            if (values[index] == -1) {  // if not entered already
                printf("Enter the value of %c: ", ch);
                scanf("%f", &values[index]);
            }
            push(values[index]);
        }
        else {
            b = pop();
            a = pop();
            switch (ch) {
                case '+': result = a + b; break;
                case '-': result = a - b; break;
                case '*': result = a * b; break;
                case '/': result = a / b; break;
                default:
                    printf("Invalid operator: %c\n", ch);
                    return 1;
            }
            push(result);
        }
    }

    printf("Postfix evaluation result = %.2f\n", pop());
    return 0;
}
