#include<stdio.h>
#include<conio.h>
int count=0;
int subset[100];
void findSubset(int arr[],int n,int index,int currsum)
{
    if(n==index)
    {
	subset[count++]=currsum;
	return;
    }
    findSubset(arr,n,index+1,arr[index]+currsum);
    findSubset(arr,n,index+1,currsum);
}
void main()
{
    int arr[]={1,2,3};
    int i;
    int n=sizeof(arr)/sizeof(arr[0]);
    clrscr();
    findSubset(arr,n,0,0);
    for(i=0;i<count;i++)
    {
    printf("%d",subset[i]);
    }
    getch();
}